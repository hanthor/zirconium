{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
  ],

  "rebaseWhen": "never",

  "regexManagers": [
    {
      "fileMatch": ["^build_files/.*\\.Containerfile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+RUN git clone (?<registryUrl>.*?) .*?(?:--branch (?<currentValue>.*?)|-b (?<currentValue>.*?))? --depth",
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+RUN git clone (?<registryUrl>.*?) .*?(?:--branch (?<currentValue>.*?)|-b (?<currentValue>.*?))? \\."
      ]
    }
  ],

  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["pin", "pinDigest"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["digest", "pinDigest", "pin"],
      "matchDepTypes": ["container"],
      "matchFileNames": [".github/workflows/**.yaml", ".github/workflows/**.yml"],
    },
    {
      "matchManagers": ["regex"],
      "matchFileNames": ["build_files/**"],
      "addLabels": ["component-update"],
      "commitMessageTopic": "component {{depName}}",
      "commitMessageExtra": "to {{newValue}}",
      "semanticCommitType": "build"
    }
  ]
}
